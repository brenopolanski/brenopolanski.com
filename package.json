{
  "name": "brenopolanski.com",
  "version": "4.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check": "bun format:check && bun lint && bun typecheck",
    "check:fix": "bun format:fix && bun lint:fix && bun typecheck",
    "clean": "/bin/bash scripts/clean.sh",
    "dev": "stale-dep && next dev",
    "format:check": "bun prettier --check",
    "format:fix": "bun prettier --write",
    "lint": "next lint",
    "lint:fix": "bun lint --fix",
    "postinstall": "stale-dep -u",
    "preinstall": "npx only-allow bun",
    "prepare": "husky",
    "prettier": "prettier \"**/*.{md,json,css,js,mjs,ts,tsx}\"",
    "preview": "bun run build && bun start -p 3001",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bun lint:fix",
      "bun format:fix"
    ],
    "*.{md,json,css,mjs}": [
      "bun format:fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.482.0",
    "next": "15.2.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/circular-dependency-plugin": "^5.0.8",
    "@types/node": "^20",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "circular-dependency-plugin": "^5.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-custom-order-fix": "^0.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "stale-dep": "^0.8.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
